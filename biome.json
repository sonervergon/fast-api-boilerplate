{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      ".mypy_cache/**",
      "**/.mypy_cache/**",
      "node_modules",
      "**/node_modules/**",
      ".git",
      ".venv",
      "**/venv/**",
      "**/__pycache__/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "ignore": ["apps/web/.react-router", "apps/core"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": ["**/generated.ts", "apps/web/.react-router", "apps/core"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "indentWidth": 2
    }
  }
}
